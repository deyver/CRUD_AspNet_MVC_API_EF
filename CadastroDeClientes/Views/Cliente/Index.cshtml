@model List<ClienteModel>
@{
    ViewData["Title"] = "Consulta Cliente";
}
<div class="text-center">
    <div class="d-grip gap-Z d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Criar">Adicionar Novo Cliente</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success">
            <button type="button" class="btn btn-danger btn-sm close-alert arial-label="close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger">
            <button type="button" class="btn btn-danger btn-sm close-alert arial-label="close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />

    <h1 class=display-4>Consulta Cliente</h1>

    <table class="table" id="table-clientes">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Data Nasc.</th>
                <th scope="col">Estado</th>
                <th scope="col">Cidade</th>
                <th scope="col">Sexo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ClienteModel cliente in Model)
                {
                    <tr>
                        <th align="left" scope="row">@cliente.Id</th>
                        <td align="left">@cliente.Nome</td>
                        <td align="left">@cliente.CPF</td>
                        <td align="left">@cliente.DataNascimento</td>
                        <td align="left">@cliente.SiglaUF</td>
                        <td align="left">@cliente.NomeCidade</td>
                        <td align="left">@cliente.Sexo</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-success" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar">Editar</a>
                            </div>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="ApagarConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
